@model List<ASPNETMVCCRUD.Models.Domain.Employee>
@{
}
<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Aylık Maaş</th>
            <th>Doğum Tarihi</th>
            <th>Department</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Departmant</td>
                <td><a href="Employees/View/@employee.Id">Görüntüle</a></td>

            </tr>
        }
    </tbody>
    
</table>